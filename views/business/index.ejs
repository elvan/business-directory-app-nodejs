<% layout('layout/boilerplate.ejs') %>
<div>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/biz">Business</a></li>
    </ol>
  </nav>
</div>
<div class="mb-3">
  <a class="btn btn-success" href="/biz-add">Add New Business</a>
</div>
<!-- prettier-ignore -->
<div class="container-lg">
  <div class="row">
    <% for( let business of businesses ) { %>
      <div class="card mb-3 px-0">
        <div class="row">
          <div class="col-sm-12 col-md-6 col-xxl-5">
            <img
              src="<%- business.image %>"
              alt="<%- business.name %> image"
              class="img-fluid" />
          </div>
          <div class="col-sm-12 col-md-6 col-xxl-7">
            <div class="card-body">
              <h5 class="card-title"><%- business.name %></h5>
              <p class="card-text"><%- business.description %></p>
              <p class="card-text">
                <small class="text-muted">
                  <%- business.address %>, <%- business.city %>
                </small>
              </p>
              <div>
                <a
                  href="/biz/<%- business.id %>"
                  class="btn btn-primary stretched-link">
                  View <%- business.name %>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
